#! /usr/bin/env bash

function die () { 
    RET=$1; shift 
    echo 1>&2 "$*" 
    echo "=========> Error, exiting at $(date -Iseconds)"
    exit $RET 
}


HOSTNAME="$(hostname)"
DESTDIR="/run/media/tkb/Utgard/From-NAS"

{
    echo "==========> Starting copy, sum, and compress  at $(date -Iseconds)"

    find /media/tkb/vaxtapes -name \*.vtape | sort | while read FN
    do
        ((FILENUM++))
        echo "==========> Working on file #$FILENUM, $FN at $(date -Iseconds)"
        DIRNAME="$(dirname $FN)"
        BASENAME="$(basename $FN)"
        DESTNAME="$DESTDIR/$BASNAME"
        COMPNAME="$BASENAME.xz"

        #    echo "DIRNAME=$DIRNAME
        #BASENAME=$BASENAME
        #DESTNAME=$DESTNAME
        #COMPNAME=$COMPNAME"
        
        [[ -e $DESTDIR/$COMPNAME ]] && {
            echo "DESTDIR/$COMPNAME already exists, skipping $FN"
            continue
        }
        echo "==========> Copying $FN to $DESTDIR at $(date -Iseconds)"
        time cp -v $FN $DESTDIR/ || die 1 "Error copying $FN to $DESTDIR, exiting  at $(date -Iseconds)."
        (
            cd $DESTDIR
            echo "==========> sha512sum $BASENAME at $(date -Iseconds)"
            time sha512sum --binary $BASENAME >$BASENAME.sha512sum.$HOSTNAME ||
                die 1 "Error sha512summing $BASENAME, exiting."
            echo "==========> xz --compress $BASENAME at $(date -Iseconds)"
            time xz --compress $BASENAME ||
                die "Error xz --compressing $BASENAME, exiting  at $(date -Iseconds)."
        )
        scream
    done
    echo "==========> Finished copy, sum, and compress  at $(date -Iseconds)"
} 2>&1 | log ~/tmp/vtape-cp-sum-and-xz
