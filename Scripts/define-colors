# -*- sh -*-
# See: https://en.wikipedia.org/wiki/ANSI_escape_code#3-bit_and_4-bit

export COLOR_NC='\e[0m'         # No Color

export COLOR_FORE_BLACK='\e[30m'
export COLOR_BACK_BLACK='\e[40m'
export COLOR_FORE_RED='\e[31m'
export COLOR_BACK_RED='\e[41m'
export COLOR_FORE_GREEN='\e[32m'
export COLOR_BACK_GREEN='\e[42m'
export COLOR_FORE_YELLOW='\e[33m'
export COLOR_BACK_YELLOW='\e[43m'
export COLOR_FORE_BLUE='\e[34m'
export COLOR_BACK_BLUE='\e[44m'
export COLOR_FORE_MAGENTA='\e[35m'
export COLOR_BACK_MAGENTA='\e[45m'
export COLOR_FORE_CYAN='\e[36m'
export COLOR_BACK_CYAN='\e[46m'
export COLOR_FORE_WHITE='\e[37m'
export COLOR_BACK_WHITE='\e[47m'
export COLOR_FORE_BRIGHT_BLACK='\e[90m'
export COLOR_BACK_BRIGHT_BLACK='\e[100m'
export COLOR_FORE_BRIGHT_RED='\e[91m'
export COLOR_BACK_BRIGHT_RED='\e[101m'
export COLOR_FORE_BRIGHT_GREEN='\e[92m'
export COLOR_BACK_BRIGHT_GREEN='\e[102m'
export COLOR_FORE_BRIGHT_YELLOW='\e[93m'
export COLOR_BACK_BRIGHT_YELLOW='\e[103m'
export COLOR_FORE_BRIGHT_BLUE='\e[94m'
export COLOR_BACK_BRIGHT_BLUE='\e[104m'
export COLOR_FORE_BRIGHT_MAGENTA='\e[95m'
export COLOR_BACK_BRIGHT_MAGENTA='\e[105m'
export COLOR_FORE_BRIGHT_CYAN='\e[96m'
export COLOR_BACK_BRIGHT_CYAN='\e[106m'
export COLOR_FORE_BRIGHT_WHITE='\e[97m'
export COLOR_BACK_BRIGHT_WHITE='\e[107m'

COLORS=(COLOR_NC
        COLOR_FORE_BLACK
        COLOR_BACK_BLACK
        COLOR_FORE_RED
        COLOR_BACK_RED
        COLOR_FORE_GREEN
        COLOR_BACK_GREEN
        COLOR_FORE_YELLOW
        COLOR_BACK_YELLOW
        COLOR_FORE_BLUE
        COLOR_BACK_BLUE
        COLOR_FORE_MAGENTA
        COLOR_BACK_MAGENTA
        COLOR_FORE_CYAN
        COLOR_BACK_CYAN
        COLOR_FORE_WHITE
        COLOR_BACK_WHITE
        COLOR_FORE_BRIGHT_BLACK
        COLOR_BACK_BRIGHT_BLACK
        COLOR_FORE_BRIGHT_RED
        COLOR_BACK_BRIGHT_RED
        COLOR_FORE_BRIGHT_GREEN
        COLOR_BACK_BRIGHT_GREEN
        COLOR_FORE_BRIGHT_YELLOW
        COLOR_BACK_BRIGHT_YELLOW
        COLOR_FORE_BRIGHT_BLUE
        COLOR_BACK_BRIGHT_BLUE
        COLOR_FORE_BRIGHT_MAGENTA
        COLOR_BACK_BRIGHT_MAGENTA
        COLOR_FORE_BRIGHT_CYAN
        COLOR_BACK_BRIGHT_CYAN
        COLOR_FORE_BRIGHT_WHITE
        COLOR_BACK_BRIGHT_WHITE
       )

function display_colors () {
    for color in ${COLORS[@]}; do
        printf "%25s => ${!color}%s${COLOR_NC}\n" $color $color
    done
}
